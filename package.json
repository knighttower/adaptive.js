{
    "name": "@knighttower/adaptive",
    "version": "1.3.8",
    "main": "index.js",
    "module": "index.js",
    "jsdeliver": "dist/Adaptive.js",
    "unpkg": "dist/Adaptive.js",
    "browser": "dist/Adaptive.js",
    "license": "MIT",
    "description": "Stand-alone or with Vue Hybrid mode Js helper library to help with adaptive layouts",
    "homepage": "https://github.com/knighttower/adaptive.js",
    "author": "knighttower (https://github.com/knighttower)",
    "keywords": [
        "media query",
        "media queries",
        "matchMedia",
        "adaptive",
        "responsive",
        "teleport",
        "DOM observer",
        "DOM selector",
        "Utility",
        "Element Helper",
        "Get Settings",
        "Vue",
        "library",
        "plugin",
        "adapt",
        "adaptive.js",
        "proxy",
        "css",
        "javascript",
        "js",
        "helper",
        "helper functions",
        "helper library",
        "helper library for adaptive layouts",
        "helper library for adaptive layouts with Vue",
        "helper library for adaptive layouts with Vue and Teleport"
    ],
    "repository": {
        "type": "git",
        "url": "git://github.com/knighttower/adaptive.js.git"
    },
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production && npm run docs",
        "production": "mix --production",
        "prettier": "prettier --config .prettierrc.json --write ./src",
        "prettier-check": "prettier --config .prettierrc.json --check ./src",
        "precommit": "lint-staged",
        "eslint": "eslint -c ./eslintrc.json --fix ./src",
        "docs": "documentation build src/Adaptive.js -f html -o docs --shallow"
    },
    "devDependencies": {
        "@babel/plugin-proposal-class-properties": "^7.18",
        "@babel/plugin-syntax-class-properties": "^7.12",
        "@babel/preset-react": "^7.18.6",
        "eslint": "^6.8.0",
        "eslint-plugin-vue": "^6.1.2",
        "laravel-mix": "^6.0.43",
        "prettier": "1.19.1",
        "pretty-quick": "^1.11.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "vue": "3.3.4",
        "vue-loader": "17.0.0",
        "vue-template-compiler": "2.7.14"
    },
    "dependencies": {
        "@knighttower/element-helper": "^1.0.9",
        "@knighttower/js-dom-observer": "^1.0.4",
        "@knighttower/js-object-proxy-helper": "^1.0.4",
        "@knighttower/js-power-helper-functions": "^1.0.2",
        "@knighttower/js-teleport": "^1.0.0",
        "documentation": "^14.0.2",
        "install": "^0.13.0",
        "jshint": "^2.13.4",
        "lint-staged": "11.1.2",
        "npm": "^8"
    },
    "lint-staged": {
        "*.js": [
            "prettier --config .prettierrc.json --write"
        ],
        "*.vue": [
            "prettier --config .prettierrc.json --write"
        ]
    },
    "bugs": {
        "url": "https://github.com/knighttower/adaptive.js/issues"
    }
}
